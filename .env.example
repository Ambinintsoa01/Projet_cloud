# Copier ce fichier en .env et ajuster les valeurs

# Database Configuration
POSTGRES_DB=cloud_db
POSTGRES_USER=cloud_user
POSTGRES_PASSWORD=cloud_pass

# Redis Configuration
REDIS_PASSWORD=redis_pass

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-256-bits
JWT_EXPIRATION=86400000

# Auth Configuration
AUTH_MAX_ATTEMPTS=3
AUTH_LOCKOUT_DURATION=900000

# Session Configuration
SESSION_TIMEOUT=3600000

# Firebase Configuration
FIREBASE_CONNECTION_TIMEOUT=3000
FIREBASE_HOST=www.google.com
FIREBASE_PORT=443

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_APP=DEBUG

# JVM Options
JAVA_OPTS=-Xms256m -Xmx512m -XX:+UseG1GC -XX:MaxGCPauseMillis=200

# Application Port
APP_PORT=8080

# PgAdmin (optionnel)
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin